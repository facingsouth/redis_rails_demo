<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col-md-8">
    <h3 style="border: 1px solid black;"><%=@msg%></h3>

    <h1>Listing Posts</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table><br>
    <%= link_to 'New Post', new_post_path %>
  </div>
  <div class="col-md-4">
    <h1>Hottest Posts</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Show</th>
        </tr>
      </thead>

      <tbody>
        <% @hot_posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= link_to 'Show', post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>